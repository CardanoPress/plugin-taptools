{
  "config": {
    "allow-plugins": {
      "automattic/jetpack-autoloader": true
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "require": {
    "php": "^7.4|^8.0",
    "ext-json": "*",
    "automattic/jetpack-autoloader": "^2.11",
    "cardanopress/framework": "^2.0",
    "kermage/external-update-manager": "^2.2"
  },
  "autoload": {
    "exclude-from-classmap": [
      "vendor/"
    ],
    "psr-4": {
      "PBWebDev\\CardanoPress\\TapTools\\": "../src/",
      "CardanoPress\\TapTools\\Dependencies\\": "."
    }
  },
  "extra": {
    "mozart": {
      "dep_namespace": "CardanoPress\\TapTools\\Dependencies\\",
      "dep_directory": "/",
      "classmap_directory": "/classes/",
      "classmap_prefix": "CardanoPress_TapTools_Dependency_",
      "excluded_packages": [
        "automattic/jetpack-autoloader",
        "cardanopress/framework",
        "kermage/external-update-manager"
      ]
    }
  },
  "scripts": {
    "action-prefix": [
      "../vendor/bin/mozart compose",
      "composer dump-autoload --classmap-authoritative",
      "composer -d .. run index.php"
    ],
    "post-install-cmd": "@action-prefix",
    "post-update-cmd": "@action-prefix"
  }
}
